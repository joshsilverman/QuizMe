#respond_modal.modal.hide
	.modal-header
		%button.close{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"} &times;
		%h3 Respond to Post
	.modal-body
		.response_container
			%textarea
			.actions	
				.btn-group{"data-toggle" => "buttons-radio"}
					%button.btn.correct Correct
					%button.btn.incorrect Incorrect
				.character_count 140
				/ #split_dm.btn.btn-danger Split Test Nudge?
				/ #split_trigger_aaf.btn.btn-danger Ask A Friend Trigger 
				%p.response_message{:style => "display: none;"}
		/ .badges
		/ 	.correct_answers_container
		/ 		Correct answers:
		/ 		%span.correct_answers
		/ 	.earned_badges_container
		/ 		Earned badges:
		/ 		%span.earned_badges
		/ 	.unissued_badges_container
		/ 		Unissued badges:
		/ 		%span.unissued_badges

		.modal_conversation_history
			.conversation
				.subsidiary.post
					%i.icon-share-alt{:style => "display: none;"}
					.content											
						= image_tag(User.first.twi_profile_img_url, :class => "rounded")
						%h5= "User name"
						%p= "Conversation history"	
	.modal-footer
		%a.btn{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"} Close
		%a#tweet.btn.btn-primary Respond