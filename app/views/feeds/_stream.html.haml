.activity-stream
  %h4 Activity
  / =image_tag "ajax-loader-retina.gif", class: 'retina-ajax-loader'

  %ul{'data-bind' => "foreach: streamPosts"}

    %li{'data-bind' => 'css: {visible: created_at}'}
      / %a.stream_item{"data-bind" => "attr: {href: href}"}
      /   %li{"data-bind" => "fadeIn: questionText"}

      .content{'data-bind' => 'click: goToPub'}
        / %image.rounded.profile{"data-bind" => "attr: {src: user_twi_profile_img_url}"}

        %h3
          %span{:style => "color: #333;", "data-bind" => "text: user_twi_screen_name"}
          %span{:style => "color: #666;"} answered

          %span.timeago{"data-bind" => "timeago: created_at"}

        %p{"data-bind" => "dotdotdot: questionText"}