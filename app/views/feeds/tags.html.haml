#tags
	#feed_container.span10
		#wrapper.span9
			#feed.row
				#left_column.span3.hidden-phone
					%ul.nav.nav-tabs.nav-stacked.tag_select
						%li
							.box.top Filter
						- @tags.each do |tag|
							%li
								%a
									%label.checkbox
										%input{:type => "checkbox"}= tag.name
					/ #add_tag.rounded.border-color
					/ 	.header
					/ 		%h4 Add a Tag		
					/ 	.add_tag_container
					/ 		%textarea
					/ 		.btn.btn-primary Add						
				#right_column.span6
					.header.border-color{:style => "border-style: solid; border-width: 1px;"}
						%h3
							All Feedback
							.btn-group.domain_select{"data-toggle" => "buttons-radio"}
								%a.btn{:type => "button", :href => '?filter=week', :class => "#{'active' if params[:filter] == 'week'}"} Week
								%a.btn{:type => "button", :href => '?filter=month', :class => "#{'active' if params[:filter] == 'month'}"} Month
								%a.btn{:type => "button", :href => '?filter=all', :class => "#{'active' if params[:filter] == 'all'}"} All
					#posts.rounded
						- @posts.each do |post|
							.conversation.border-color.feedback{:class => (post.tags.collect(&:name).join(' '))}
								.post.parent.answered{:post_id => post.id, :interaction_type => post.interaction_type}
									%p.time= time_formatter(post.created_at)
									#classify{:style => "visibility: visible;"}
										- post.tags.each do |tag|
											%span.label= tag.name
									.content
										= image_tag(post.user.twi_profile_img_url, :class => "rounded")
										%i{:class => interaction_icon(post.interaction_type)}
										%h5= post.user.twi_screen_name	
										%p= post.text
										/ .post_actions
										/ 	= render :partial => "feeds/default_actions", :locals => {:post => post}


