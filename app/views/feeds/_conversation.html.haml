- count = @conversation.posts.size
- @conversation.posts.order("created_at ASC").each_with_index do |response, i|
	.subsidiary.post{:class => ("answered" if i < (count - 1))}
		.content
			- user = (response["user_id"] == @question_asker.id ? @question_asker : current_user)
			= image_tag(user.twi_profile_img_url, :class => "rounded")
			%h5= user.twi_screen_name
			- formatted_response = format_response(response['text'])
			- if formatted_response[1]
				%p 
					= formatted_response[0].html_safe
					%a.answer_link{:target => "_blank", :href => formatted_response[1]}= formatted_response[1]
			- else
				%p= formatted_response[0].html_safe

.subsidiary.post.after_answer.feedback.hide
	.content
		%p.cta_message How was this question?
		%a.btn.btn-danger{type_id: 11} Needs Work
		%a.btn.btn-success{type_id: 7} It's Good!
- if current_user and Post.create_split_test(current_user.id, "ugc cta after five answers on site (adds question)", "false", "true"
	.subsidiary.post.after_answer.hide
		.subsidiary.post.after_answer.new_question.hide
			.content
				%p.cta_message Want to contribute a question?
				%a.btn.btn-warning.next_question Write One