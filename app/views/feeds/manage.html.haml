#manager
	#feed_container.span10
		#wrapper.span9
			#header.row.rounded.border-color
				#account_information.span6
					.container
						.inner_container
							.account_image
								= image_tag(@asker.twi_profile_img_url.sub(/_normal.png$/, "_reasonably_small.png"), :class => "rounded")
							.account_text
								%h2= @asker.twi_screen_name
								%h3= "@#{@asker.twi_screen_name}"
								%p= @asker.description
								/ %a.scoreboard_link.visible-phone{:href => "#"}
								/ 	Go to the scoreboard.
				#account_stats.span3.hidden-phone
			#feed.row
				#right_column.span6
					#posts.rounded
						.header.border-color
							%h3
								Activity
						- @engagements.each do |id, post|
							- conversation = nil #@responses[post.id]
							- conversation ? responded = true : responded = false
							.conversation.border-color
								.post.parent.answered{:post_id => id}
									#classify
										.btn-group
											%a.btn.btn-mini.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
												Mention
												%span.caret
											%ul.dropdown-menu
												%li
													%a{:href => "#"} Retweet
												%li
													%a{:href => "#"} Spam
												%li
													%a{:href => "#"} Reply
												%li
													%a{:href => "#"} Mention
									/ %span#activity_badge.badge.badge-warning= post[1].length
									/ %i.icon-share-alt{:style => ("display: none;" unless responded)}
									.content
										= image_tag(@asker.twi_profile_img_url, :class => "rounded")
										%h5= @asker.twi_screen_name
										%p= post[0].text
								.subsidiaries{:style => "display: none;"}
									- post[1].each do |r|
										.subsidiary.post.reply.bottom_border
											%i.icon-share-alt{:style => "display: none;"}
											.content
												= image_tag(@asker.twi_profile_img_url, :class => "rounded")
												%h5= r.user.twi_screen_name
												%p= r.text			
								.loading{:style => "display: none;"}
									Loading...					
						#posts_more.border-color
							/ %a{:href => "#"} Load more
							Last Post Reached
				#left_column.span3.hidden-phone
					#scoreboard.rounded.border-color
						.header
							%h4
								Leaderboard
						%ul.unstyled
							- @leaders[:scores].each_with_index do |leader, i|
								/ {:href => "/feeds/#{related.id}"}
								%a{:href => "http://www.twitter.com/#{leader[:user].twi_screen_name}", :target => "_blank"}
									%li 
										/ {:class => ("border_bottom" if i < 3)}
										.content
											.place= i + 1
											= image_tag(leader[:user].twi_profile_img_url, :class => "rounded")
											%h5= leader[:user].twi_screen_name
											- if leader[:correct] == 1
												%p= "#{leader[:correct]} correct answer"
											- else
												%p= "#{leader[:correct]} correct answers"
											.clr
										.clr
						.clr
					.clr
					- unless @related.blank?
						#related.rounded.border-color
							.header
								%h4
									Other Feeds
							%ul.unstyled
								- @related.each_with_index do |related, i|
									%a{:href => "/feeds/#{related.id}"}
										%li{:class => ("border_bottom" if i < 2)}
											.content
												= image_tag(related.twi_profile_img_url, :class => "rounded")
												%h5= related.twi_name
												%p= related.description

#respond_modal{:style => "display: none;"}
	.modal_body
		%textarea
		.actions	
			.btn-group
				%button.btn.correct Correct
				%button.btn.incorrect Incorrect
			#tweet.btn.btn-info Tweet
			.character_count
				%p 140
	.modal_conversation_history
		.conversation
			.subsidiary.post
				%i.icon-share-alt{:style => "display: none;"}
				.content											
					= image_tag(User.first.twi_profile_img_url, :class => "rounded")
					%h5= "User name"
					%p= "Conversation history"		

#link_post_modal{:style => "display: none;"}
	.parent_post_container
		.parent_post
			.conversation
				.subsidiary.post
					%i.icon-share-alt{:style => "display: none;"}
					.content											
						= image_tag(User.first.twi_profile_img_url, :class => "rounded")
						%h5= "User name"
						%p= "Post to be linked"		
		.controls
			.btn.btn-info Link
	.recent_posts	
		- 10.times do |i|
			.conversation{:class => ("first" if i == 0)}
				%label.radio
					%input{:type => "radio", :name => "post_radio", :id => "optionsRadios1", :value => "value"}
						.subsidiary.post
							%i.icon-share-alt{:style => "display: none;"}
							.content											
								= image_tag(User.first.twi_profile_img_url, :class => "rounded")
								%h5= "User name"
								%p= "Previous post"		

#post_template.conversation.border-color{:style => "display: none;"}
	.post.parent
		%i.icon-share-alt{:style => "display: none;"}
		.content
			= image_tag(@asker.twi_profile_img_url, :class => "rounded")
			%h5= @asker.twi_screen_name
			%p Post content
		.answers.rounded.border{:style => "display: none;"}
	.subsidiaries{:style => "display: none;"}
	.loading{:style => "display: none;"}
		Loading...

#answer_template.answer_container.input{:type => 'text', :style => "display: none;"}
	.shadow-top
	.tweet
		%span#account= "@#{@asker.twi_screen_name}"
		%span#answer= " Answer text"
		%span#url= " URL"
		/ %span#additional{:contenteditable => true}
	.answer_controls
		.tweet_button.btn.btn-primary Tweet!
	.shadow-bottom

#subsidiary_template.post{:style => "display: none;"}
	.content
		= image_tag(@asker.twi_profile_img_url, :class => "rounded")							
		%h5= "User Name"
		%p= "Post content"

= hidden_field_tag :feed_id, @asker.id
= hidden_field_tag :feed_name, @asker.twi_screen_name
= hidden_field_tag :post_id, @post_id
= hidden_field_tag :answer_id, @answer_id
= hidden_field_tag :user_name, current_user.twi_screen_name if current_user
= hidden_field_tag :user_img, current_user.twi_profile_img_url if current_user