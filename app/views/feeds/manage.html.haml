= javascript_include_tag "https://www.google.com/jsapi"
#manager
	#feed_container.span10
		#wrapper.span9
			#header.row.rounded.border-color
				#account_information.span6
					.container
						.inner_container
							.account_image
								= image_tag(@asker.twi_profile_img_url.sub(/_normal.png$/, "_reasonably_small.png"), :class => "rounded")
							.account_text
								%h2= @asker.twi_screen_name
								%h3= "@#{@asker.twi_screen_name}"
								%p= @asker.description
								/ %a.scoreboard_link.visible-phone{:href => "#"}
								/ 	Go to the scoreboard.
				#account_stats.span3.hidden-phone
			#feed.row
				#right_column.span6
					#posts.rounded
						.header.border-color
							%h3
								Activity
						- @engagements.each do |id, post|
							.conversation.border-color
								.post.parent.answered{:post_id => id, :interaction_type => post.interaction_type}
									#classify
										- if post.autospam
											%i.icon-warning-sign
										%a
											= best_in_place post, :spam, :type => :checkbox, :collection => ["flag", "unflag"]
									%i.icon-share-alt{:style => "display: none;"}
									.content
										= image_tag(post.user.twi_profile_img_url, :class => "rounded")
										%i{:class => interaction_icon(post.interaction_type)}
										%h5= post.user.twi_screen_name
										%p= post.text
										= best_in_place post, :requires_action, :type => :checkbox, :collection => ["flag", "unflag"]
										- unless post.in_reply_to_post_id
											%a.link_post Link Post				
						#posts_more.border-color
							Last Post Reached
				#left_column.span3.hidden-phone
					#scoreboard.rounded.border-color
						.header
							%h4
								Leaderboard
						%ul.unstyled
							- @leaders[:scores].each_with_index do |leader, i|
								/ {:href => "/feeds/#{related.id}"}
								%a{:href => "http://www.twitter.com/#{leader[:user].twi_screen_name}", :target => "_blank"}
									%li 
										/ {:class => ("border_bottom" if i < 3)}
										.content
											.place= i + 1
											= image_tag(leader[:user].twi_profile_img_url, :class => "rounded")
											%h5= leader[:user].twi_screen_name
											- if leader[:correct] == 1
												%p= "#{leader[:correct]} correct answer"
											- else
												%p= "#{leader[:correct]} correct answers"
											.clr
										.clr
						.clr
					.clr
					- unless @related.blank?
						#related.rounded.border-color
							.header
								%h4
									Other Feeds
							%ul.unstyled
								- @related.each_with_index do |related, i|
									%a{:href => "/feeds/#{related.id}"}
										%li{:class => ("border_bottom" if i < 2)}
											.content
												= image_tag(related.twi_profile_img_url, :class => "rounded")
												%h5= related.twi_name
												%p= related.description

#respond_modal{:style => "display: none;"}
	.modal_body
		%textarea
		.actions	
			.btn-group{"data-toggle" => "buttons-radio"}
				%button.btn.correct Correct
				%button.btn.incorrect Incorrect
			#tweet.btn.btn-info Respond
			.character_count
		#abingo_dm.btn.btn-danger Get Abingo DM
	.modal_conversation_history
		.conversation
			.subsidiary.post
				%i.icon-share-alt{:style => "display: none;"}
				.content											
					= image_tag(User.first.twi_profile_img_url, :class => "rounded")
					%h5= "User name"
					%p= "Conversation history"		

#link_post_modal.modal.hide
	.modal-header
		%button.close{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"} &times;
		%h3 Modal header
	.modal-body
		.parent_post_container
			.parent_post
				.conversation
					.subsidiary.post
						%i.icon-share-alt{:style => "display: none;"}
						.content											
							= image_tag(User.first.twi_profile_img_url, :class => "rounded")
							%h5= "User name"
							%p= "Post to be linked"	
		.recent_posts	
			- @questions.each_with_index do |q, n|
				.conversation{:class => ("first" if n == 0)}
					%label.radio
						%input{:type => "radio", :name => "post_radio", :id => q.id, :value => q.id}
							.subsidiary.post
								%i.icon-share-alt{:style => "display: none;"}
								.content											
									= image_tag(@asker.twi_profile_img_url, :class => "rounded")
									%h5= @asker.twi_screen_name
									%p= q.question.text
								.answers.rounded.border
									- count = q.question.answers.size
									- q.question.answers.each_with_index do |answer, i|
										%h3{:class => ("bottom_border" if i < (count - 1)), :correct => answer["correct"].to_s, :answer_id => answer.id}= answer.text
										.answer_container								
	.modal-footer
		%a.btn{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"} Close
		%a#link.btn.btn-primary Link Post

