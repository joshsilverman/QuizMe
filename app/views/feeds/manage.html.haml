= javascript_include_tag "https://www.google.com/jsapi"
#manager
	#feed_container.span10
		#wrapper.span9
			#header.row.rounded.border-color
				#account_information.span6
					.container
						.inner_container
							.account_image
								= image_tag(@asker.twi_profile_img_url.sub(/_normal.png$/, "_reasonably_small.png"), :class => "rounded")
							.account_text
								%h2= @asker.twi_screen_name
								%h3= "@#{@asker.twi_screen_name}"
								%p= @asker.description
				#account_stats.span3.hidden-phone
			#feed.row
				#right_column.span6
					#posts.rounded
						.header.border-color
							%h3
								Activity
						- @engagements.each do |id, post|
							.conversation.border-color
								.subsidiaries{:style => "display: none;"}
									- if @conversations[post.id]
										- @conversations[post.id][:posts].each do |r|
											.subsidiary.post.reply.bottom_border
												#time
													%p.time_ago= time_formatter(r[:created_at].to_date)		
												%i.icon-share-alt{:style => "display: none;"}
												.content
													= image_tag(@conversations[post.id][:users][r[:user_id]].twi_profile_img_url, :class => "rounded")
													%h5= @conversations[post.id][:users][r[:user_id]].twi_screen_name
													%p= r[:text]	
												- if post.responded_to == false and post.engagement_type.include? "reply" and r[:engagement_type].include? "question"
													.answers.rounded.border{:style => "display: none;"}
														- count = @conversations[post.id][:answers].size
														- @conversations[post.id][:answers].each_with_index do |answer, i|
															%h3{:class => ("bottom_border" if i < (count - 1)), :correct => answer["correct"].to_s, :answer_id => answer.id, :style => ("color: green;" if answer[:correct])}= answer.text
															.answer_container.input{:type => 'text'}
								.post.parent.answered{:post_id => id}
									#time
										%p.time_ago= time_formatter(post.created_at.to_date)
										/ .btn-group
										/ 	%a.btn.btn-mini.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :class => eng_style(post.engagement_type)}= eng_name(post.engagement_type)
										/ 	%ul.dropdown-menu
										/ 		%li
										/ 			%a{:href => "#", :engagement_type => "share"} Retweet
										/ 		%li
										/ 			%a{:href => "#", :engagement_type => "spam"} Spam
										/ 		%li
										/ 			%a{:href => "#", :engagement_type => "mention reply"} Reply
										/ 		%li
										/ 			%a{:href => "#", :engagement_type => "mention"} Mention
										/ 		%li
										/ 			%a{:href => "#", :engagement_type => "pm"} Private Message
									/ %span#activity_badge.badge.badge-warning= post[1].length
									%i.icon-share-alt{:style => "display: none;"}
									.content
										= image_tag(post.user.twi_profile_img_url, :class => "rounded")
										%h5= post.user.twi_screen_name
										%p= post.text		
								.respond{:style => "display: none;"}
									.composition
										%textarea
										.actions	
											.btn-group
												%button.btn.correct Correct
												%button.btn.incorrect Incorrect	
											#tweet.btn.btn-info Tweet
											.character_count
												%p 140
								.loading{:style => "display: none;"}
									Loading...					
						#posts_more.border-color
							/ %a{:href => "#"} Load more
							Last Post Reached
				#left_column.span3.hidden-phone
					#scoreboard.rounded.border-color
						.header
							%h4
								Leaderboard
						%ul.unstyled
							- @leaders[:scores].each_with_index do |leader, i|
								%a{:href => "http://www.twitter.com/#{leader[:user].twi_screen_name}", :target => "_blank"}
									%li 
										.content
											.place= i + 1
											= image_tag(leader[:user].twi_profile_img_url, :class => "rounded")
											%h5= leader[:user].twi_screen_name
											- if leader[:correct] == 1
												%p= "#{leader[:correct]} correct answer"
											- else
												%p= "#{leader[:correct]} correct answers"
											.clr
										.clr
						.clr
					.clr
					- unless @related.blank?
						#related.rounded.border-color
							.header
								%h4
									Other Feeds
							%ul.unstyled
								- @related.each_with_index do |related, i|
									%a{:href => "/feeds/#{related.id}"}
										%li{:class => ("border_bottom" if i < 2)}
											.content
												= image_tag(related.twi_profile_img_url, :class => "rounded")
												%h5= related.twi_name
												%p= related.description

#response_modal.modal.hide
	.modal-header
		Reply to jasonurton
	.modal-body
		.composition
			%textarea
			.actions	
				.btn-group
					%button.btn.correct Correct
					%button.btn.incorrect Incorrect
		.history
			.conversation
				.subsidiary.post
					%i.icon-share-alt{:style => "display: none;"}
					.content											
						= image_tag(User.first.twi_profile_img_url, :class => "rounded")
						%h5= "User name"
						%p= "Conversation history"			
	.modal-footer
		#tweet.btn.btn-info Tweet
		.character_count
			%p 140

#respond_modal{:style => "display: none;"}
	.modal_body
		%textarea
		.actions	
			.btn-group
				%button.btn.correct Correct
				%button.btn.incorrect Incorrect
			#tweet.btn.btn-info Tweet
			.character_count
				%p 140
	.modal_conversation_history
		.conversation
			.subsidiary.post
				%i.icon-share-alt{:style => "display: none;"}
				.content											
					= image_tag(User.first.twi_profile_img_url, :class => "rounded")
					%h5= "User name"
					%p= "Conversation history"		

#link_post_modal{:style => "display: none;"}
	.parent_post_container
		.parent_post
			.conversation
				.subsidiary.post
					%i.icon-share-alt{:style => "display: none;"}
					.content											
						= image_tag(User.first.twi_profile_img_url, :class => "rounded")
						%h5= "User name"
						%p= "Post to be linked"		
		.controls
			#link.btn.btn-info Link
	.recent_posts	
		- @questions.each_with_index do |q, n|
			.conversation{:class => ("first" if n == 0)}
				%label.radio
					%input{:type => "radio", :name => "post_radio", :id => q[0], :value => q[0]}
						.subsidiary.post
							%i.icon-share-alt{:style => "display: none;"}
							.content											
								= image_tag(@asker.twi_profile_img_url, :class => "rounded")
								%h5= @asker.twi_screen_name
								%p= q[1].text
							.answers.rounded.border
								- count = q[2].size
								- q[2].each_with_index do |answer, i|
									%h3{:class => ("bottom_border" if i < (count - 1)), :correct => answer["correct"].to_s, :answer_id => answer.id}= answer.text
									.answer_container

#post_template.conversation.border-color{:style => "display: none;"}
	.post.parent
		%i.icon-share-alt{:style => "display: none;"}
		.content
			= image_tag(@asker.twi_profile_img_url, :class => "rounded")
			%h5= @asker.twi_screen_name
			%p Post content
		.answers.rounded.border{:style => "display: none;"}
	.subsidiaries{:style => "display: none;"}
	.loading{:style => "display: none;"}
		Loading...

#answer_template.answer_container.input{:type => 'text', :style => "display: none;"}
	.shadow-top
	.tweet
		%span#account= "@#{@asker.twi_screen_name}"
		%span#answer= " Answer text"
		%span#url= " URL"
		/ %span#additional{:contenteditable => true}
	.answer_controls
		.tweet_button.btn.btn-primary Tweet!
	.shadow-bottom

#subsidiary_template.post{:style => "display: none;"}
	.content
		= image_tag(@asker.twi_profile_img_url, :class => "rounded")							
		%h5= "User Name"
		%p= "Post content"

= hidden_field_tag :feed_id, @asker.id
= hidden_field_tag :feed_name, @asker.twi_screen_name
= hidden_field_tag :post_id, @post_id
= hidden_field_tag :answer_id, @answer_id
= hidden_field_tag :conversations, @conversations.to_json
= hidden_field_tag :engagements, @engagements.to_json
= hidden_field_tag :user_name, current_user.twi_screen_name if current_user
= hidden_field_tag :user_img, current_user.twi_profile_img_url if current_user