- if @asker
	- content_for :title, "#{@asker.twi_screen_name} - #{@asker.description}"

#post_feed
	#feed_container
		#wrapper
			#feed.row
				= render :partial => "account_info"

				#left_column.span3
					#left_column_container
						#activity_stream.rounded.border-color.hidden-phone
							= render partial: "stream"

						.clr
						- if current_user
							= render partial: "my_badges"
						- else
							= render partial: "my_badges_unauth"

				#right_column.span6
					#posts.rounded
						.header.border-color
							%h3
								.ugc
									%a.post_question{:href => (user_omniauth_authorize_path(:twitter, :feed_id => @asker.id, :q => 1, :use_authorize => false) unless current_user)}
										%i.icon-pencil
										Post a Question

								Questions

						#feed_content
							= render :partial => "feed"

						#posts_more.border-color
							%a{:href => "#"} Load more