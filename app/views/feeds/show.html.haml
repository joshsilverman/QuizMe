= hidden_field_tag :feed_name, @account.name

#feed_container
	#feed_header
		#feed_image
			= image_tag('https://twimg0-a.akamaihd.net/profile_images/2320273913/31e2wgbkv1v5d1qdx23j.jpeg')
		#feed_description
			This is a feed about biology. Check it ouuuuuuut.
		#feed_stats
	#feed_content
		- @posts.each do |post|
			.post
				.header
					= "#{@account.name}:"
				.content
					.question
						%p= post.text
					.answers
						- post.question.answers.each do |answer|
							.answer{:class => ("correct" if answer.correct)}
								= answer.text

#post_template
	.header
	.content
		.question
			%p Oops!
		.answers