.row
	#wrapper.span10.offset1
		#header.row
			#account.span10.rounded
				#account_information
					= image_tag(@account.twi_profile_img_url, :class => "rounded")
					= @account.description
					%a.scoreboard_link.visible-phone{:href => "#"}
						Go to the scoreboard.
		#feed.row
			#left_column.span4.hidden-phone
				#scoreboard.rounded
					.header
						%h4
							Leaderboard
				#related.rounded
					.header
						%h4
							Related
			#right_column.span6
				#posts.rounded
					.header
						%h3
							Posts
					- @posts.each do |post|
						.conversation
							.post
								.content
									= image_tag(@account.twi_profile_img_url, :class => "rounded")
									%h5= @account.name
									%p= post.text
								.answers.rounded{:style => "display: none;"}
									- answers = post.question.answers
									- answers.each_with_index do |answer, i|
										%h3{:class => ("bottom_border" if i < (answers.count - 1)), :correct => answer["correct"].to_s}= answer.text
										.answer_container.input{:type => 'text'}
											.tweet
												%span#account= "@#{@account.name}"
												%span#answer= " #{answer.text}"
												/ %span#additional{:contenteditable => true}
											.answer_controls
												.btn.btn-primary Tweet!
							.loading{:style => "display: none;"}
								Loading...
					#posts_more
						%a{:href => "#"} Load more

