.row
	#wrapper.span10.offset1
		#header.row.rounded
			#account_information.span6
				.container
					.inner_container
						.account_image
							= image_tag(@account.twi_profile_img_url, :class => "rounded")
						.account_text
							%h2= @account.name
							%h3= "@#{@account.twi_name}"
							%p= @account.description
							/ %a.scoreboard_link.visible-phone{:href => "#"}
							/ 	Go to the scoreboard.
			#account_stats.span3.hidden-phone
				Yo deez are the stats
		#feed.row
			#left_column.span4.hidden-phone
				#scoreboard.rounded
					.header
						%h4
							Leaderboard
				#related.rounded
					.header
						%h4
							Related
			#right_column.span6
				#posts.rounded
					.header
						%h3
							Posts
					- @posts.each do |post|
						.conversation
							.post.parent{:post_id => post.id}
								%i.icon-share-alt{:style => "display: none;"}
								.content
									= image_tag(@account.twi_profile_img_url, :class => "rounded")
									%h5= @account.name
									%p= post.text
								.answers.rounded{:style => "display: none;"}
									- answers = post.question.answers
									- count = answers.count
									- answers.each_with_index do |answer, i|
										%h3{:class => ("bottom_border" if i < (count - 1)), :correct => answer["correct"].to_s, :answer_id => answer.id}= answer.text
										.answer_container.input{:type => 'text'}
											.tweet
												- answer.tweetable(@asker.name)
												- overage = (140 - "@#{@account.name} ".length - answer.text.length)
												- overage < 0 ? truncate = answer.text.length - overage.abs : truncate = answer.text.length
												%span#account= "@#{@account.name}"
												%span#answer= " #{truncate(answer.text, :length => truncate)}"
												/ %span#additional{:contenteditable => true}
											.answer_controls
												%a.btn.btn-primary{:href => ("/auth/twitter?feed_id=#{@account.id}&post_id=#{post.id}&answer_id=#{answer.id}" unless current_user)} Tweet!
							.loading{:style => "display: none;"}
								Loading...
					#posts_more
						%a{:href => "#"} Load more



#post_template.conversation{:style => "display: none;"}
	.post.parent
		.content
			= image_tag(@account.twi_profile_img_url, :class => "rounded")
			%h5= @account.name
			%p Post content
		.answers.rounded{:style => "display: none;"}
	.loading{:style => "display: none;"}
		Loading...

#answer_template.answer_container.input{:type => 'text', :style => "display: none;"}
	.tweet
		%span#account= "@#{@account.name}"
		%span#answer= " Answer text"
		/ %span#additional{:contenteditable => true}
	.answer_controls
		.btn.btn-primary Tweet!

#subsidiary_template.post{:style => "display: none;"}
	.content
		= image_tag(@account.twi_profile_img_url, :class => "rounded")							
		%h5= "User Name"
		%p= "Post content"

= hidden_field_tag :feed_id, @account.id
= hidden_field_tag :feed_name, @account.name
= hidden_field_tag :post_id, @post_id
= hidden_field_tag :answer_id, @answer_id
= hidden_field_tag :user_name, current_user.twi_screen_name if current_user