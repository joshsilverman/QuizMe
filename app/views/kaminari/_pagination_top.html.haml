%ul.pager
  - prev_page = link_to_previous_page results, '← Prev'
  - if prev_page
    %li.previous
      = prev_page
  - else
    %li.previous.disabled
      %a{:href => "#"} ← Prev
  - next_page = link_to_next_page results, 'Next →'
  - if next_page
    %li.next
      = next_page
  - else
    %li.next.disabled
      %a{:href => "#"} Next →