- party = "authors"
- graphs = [{name: 'ugc', display_name: 'Questions / day'}, {name: 'average_time_to_publish', display_name: 'Average time to publish'}, {name: 'percent_published', display_name: 'Percent published'}]

.row
  %ul.nav.nav-tabs.nav-stacked.span3
    - graphs.each do |graph_data|
      %li
        %a{href: "##{party}-#{graph_data[:name]}"}
          #{graph_data[:display_name]}
          %span.loading.hide= image_tag "ajax-loader.gif"
  .graphs
    - graphs.each do |graph_data|
      .panel{class: graph_data[:name]}
        #data_row.row
          #graph.graph
        = hidden_field_tag :data, @data.to_json if @data