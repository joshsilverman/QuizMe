<div class="page-header">
  <h1><%=t '.title', :default => 'Askers' %></h1>
</div>
    <%counter=0%>
    <% @askers.each_with_index do |asker, i| %>
    <%if i%3==0 %><div class='row'><% end %>
      <div class='span3 well'>
        <%= image_tag(asker.twi_profile_img_url) %>
        <h1 style='display: inline'><%= link_to asker.twi_name, asker_path(asker) %></h1>
        <h4>
            <%= "New Engagements: #{@new_posts[asker.id]}" %>
        </h4>
      </div>
    <%if i%3==2 %></div><% end %>
    <%counter=i %>
    <% end %>
    <%unless counter%3==2 %></div><% end %>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_asker_path,
            :class => 'btn btn-primary' %>
