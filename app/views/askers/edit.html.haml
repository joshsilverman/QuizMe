:css
  @media (min-width: 1200px) {.container, .navbar-fixed-top .container, .navbar-fixed-bottom .container {width: 874px;}}
  #wrapper {margin-left: -15px;}

#feed_container.span10
  #wrapper.span9
    #header.row.rounded.border-color
      #account_information.span6
        .container
          .inner_container
            .account_image
              = image_tag(@asker.twi_profile_img_url.sub("_normal.", "_reasonably_small."), :class => "rounded")
            .account_text
              %h2= @asker.twi_screen_name
              %h3= "@#{@asker.twi_screen_name} (#{@asker.twi_user_id})"
              %p= @asker.description
              - if current_user and (@asker.id == current_user.id or current_user.is_role?('admin') or current_user.twi_screen_name == 'StudyEgg')
                %br
                = link_to 'Add/Update Twitter', "/auth/twitter?update_asker_id=#{@asker.id}"
                &nbsp;|&nbsp;
                %a{:href => "/feeds/#{@asker.id}/manage"} Moderate Account

    - if @linked
      #feed.row
        #right_column.span6
          #posts.rounded
            .header.border-color
              %h3
                Oauth

              %dl
              - if @asker.twi_user_id
                /%dt Twitter Name
                /%dd= @asker.twi_name

                /%dt Twitter handle
                /%dd= @asker.twi_screen_name

                /%dt Profile image
                /%dd= @asker.twi_profile_img_url

                /%dt Twitter User Id
                /%dd= @asker.twi_user_id

                %dt Twitter oauth token
                %dd= @asker.twi_oauth_token

                %dt Twitter oauth secret
                %dd= @asker.twi_oauth_secret

  =# link_to 'Add/Update Facebook', '/auth/facebook'
  =# link_to 'Add/Update Tumblr', '/auth/tumblr'

