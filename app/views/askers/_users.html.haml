.ugc
  %h2.handle_name 
    questions submitted / day
    %span.loading.hide= image_tag "ajax-loader.gif"

  #data_row.row
    #ugc.panel.rounded.span10
      #ugc_graph.graph
  = hidden_field_tag :ugc_data, @ugc_data.to_json

.questions_answered
  %h2.handle_name 
    median questions answered per user
    %span.loading.hide= image_tag "ajax-loader.gif"

  #data_row.row
    #questions.panel.rounded.span10
      #questions_graph.graph
  = hidden_field_tag :questions_answered_data, @questions_answered_data.to_json

.learner_levels{:style => "height: 600px;"}
  %h2.handle_name 
    learner level breakdown
    %span.loading.hide= image_tag "ajax-loader.gif"

  #data_row.row
    #learner_levels.panel.rounded.span10
      #learner_levels_graph.graph
  = hidden_field_tag :learner_levels_data, @learner_levels_data.to_json