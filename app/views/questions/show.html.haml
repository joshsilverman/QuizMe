- content_for :title, "#{@asker.twi_screen_name} - #{@question.text}"
#feed_container.span10{:style => "float: none !important;"}
  #wrapper{:style => "background: none !important;"}
    #question.span6
      .conversation.border-color
        .post.parent
          .content
            = image_tag(@asker.twi_profile_img_url, :class => "rounded")
            %a{:href => "/feeds/#{@asker.id}"}
              %h5= @asker.twi_screen_name
            %a.twi_link{:href => "http://www.twitter.com/#{@asker.twi_screen_name}", :target => "_blank"}= "@#{@asker.twi_screen_name}"
          %h1= @question.text
          .answers.rounded.border
            - answers = @question.answers.shuffle
            - count = answers.size
            - answers.each_with_index do |answer, i|
              %h2{:class => ("bottom_border" if i < (count - 1)), :correct => answer["correct"].to_s, :answer_id => answer.id}= answer.text
              .answer_container.input{:type => 'text'}
                .shadow-top
                .tweet
                  %span#account= "@#{@asker.twi_screen_name}"
                  %span#answer= " #{answer.tweetable(@asker.twi_screen_name)}"
                .answer_controls
                  %a.tweet_button.btn.btn-primary{:href => ("/auth/twitter?question_id=#{@question.id}&answer_id=#{answer.id}" unless current_user)} Tweet!
                .shadow-bottom
        .subsidiaries{:style => "display: none;"}
        .loading{:style => "display: none;"}
          Loading...
        .more{:style => "display: none;"}
          %a.answer_more{:href => "/feeds/#{@asker.id}"} Answer more questions!

#subsidiary_template.post{:style => "display: none;"}
  .content
    = image_tag(@asker.twi_profile_img_url, :class => "rounded")  
    %h5= "User Name"
    %p= "Post content"

= hidden_field_tag :asker_id, @asker.id
= hidden_field_tag :question_id, @question.id
= hidden_field_tag :user_img, current_user.twi_profile_img_url if current_user
= hidden_field_tag :user_name, current_user.twi_screen_name if current_user
= hidden_field_tag :feed_name, @asker.twi_screen_name
= hidden_field_tag :publication_id, @publication.id
= hidden_field_tag :answer_id, @answer_id