- model_class = Question.new.class
#moderate_questions
  .page-header
    %h1= t '.title', :default => model_class.model_name.human.pluralize
  %table.table{:style => "background: white;"}
    %thead
      %tr
        %th.span10= model_class.human_attribute_name(:text)
        %th= model_class.human_attribute_name(:topic_id)
        %th= model_class.human_attribute_name(:created_at)
        %th= t '.actions', :default => t("helpers.actions")
    %tbody
      - @questions.each do |question|
        %tr{:id => "question_#{question.id}"}
          %td.span10
            %p{:style => "font-weight: bold;"}= question.text
            - question.answers.each_with_index do |answer, i|
              %p= "#{i+1}. #{answer.text}"
          %td= question.topic_id
          %td= question.created_at
          %td
            .btn-group
              %button.btn.btn-success{:qid => question.id} Accept
              %button.btn.btn-danger{:qid => question.id} Reject