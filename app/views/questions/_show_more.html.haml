
.tabbable
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#tab1"} Video
    / %li
    /   %a{"data-toggle" => "tab", :href => "#tab2"} Notes
    %li
      %a{"data-toggle" => "tab", :href => "#tab3"} Activity
  .tab-content
    #tab1.tab-pane.active
      .video
        %iframe{:allowfullscreen => "", :frameborder => "0", :height => "315", :src => @question.resource_url, :width => "100%"}
    / #tab2.tab-pane
    #tab3.tab-pane
      %p This question has been answered by:
      / # = render :partial => "feeds/activity", :locals => {:post => post}
      .activity_container{:style => ("display: none;" unless @actions[@question.id].present?)}
        .interactions
          - if @actions[@question.id]
            - @actions[@question.id].each do |interaction|
              = image_tag(interaction[:user][:twi_profile_img_url], :class => "rounded interaction profile", :rel => "tooltip", :title => "#{interaction[:user][:twi_screen_name]} #{(interaction[:interaction_type] == 2 ? 'answered' : 'retweeted')}", "data-placement" => "bottom")

          - if current_user
            = image_tag(current_user.twi_profile_img_url, :class => "rounded interaction user_answered", :rel => "tooltip", :title => "#{current_user.twi_screen_name} answered", "data-placement" => "bottom", :style => "display: none;")