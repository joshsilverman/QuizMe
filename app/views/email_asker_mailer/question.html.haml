%html
	%head
	%body
		- if @grade
			= @grade
			%br
			%br

		= @text
		
		%br
		- if @include_answers
			- abc = ('a'..'z').to_a
			- @question.answers.shuffle.each_with_index do |a, i|
				.answer #{abc[i]}) #{a.text}

		%br
		Reply to this email with your answer or answer at #{@url}

		- if @question.resource_url
			%br
			Watch the full video at #{@question.resource_url}