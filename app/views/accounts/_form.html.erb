<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :tum_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tum_url, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :posts_per_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :posts_per_day, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                accounts_path, :class => 'btn' %>
  </div>
<% end %>
