= javascript_include_tag "https://www.google.com/jsapi"
= @headsup_stats
= hidden_field_tag :rts, @rts.to_json
= hidden_field_tag :qa, @qa.to_json
= hidden_field_tag :dau, @dau.to_json
= #hidden_field_tag :daily_twi_ret, @daily_twi_ret.to_json
= #hidden_field_tag :weekly_twi_ret, @weekly_twi_ret.to_json
= hidden_field_tag :daily_int_ret, @daily_int_ret.to_json
= hidden_field_tag :weekly_int_ret, @weekly_int_ret.to_json

.stats
	.row.widget.header
		.row.heading
			.span2.headsup
				%h2 Followers
			.span2.headsup
				%h2 Unique Posts
			.span2.headsup
				%h2 Questions Answered
			.span2.headsup
				%h2 Avg Daily Active Users
			.span2.headsup
				%h2 RTs
			.span2.headsup
				%h2 Churn
		.row.data
			.span2.headsup
				%span.badge= @headsup_stats['followers'][0]
				%span.badge.delta{:class => "#{@headsup_stats['followers'][1] >= 0 ? 'badge-success' : 'badge-important'}"}= "#{@headsup_stats['followers'][1] >= 0 ? '+' : ''}#{@headsup_stats['followers'][1]}%"
			.span2.headsup
				%span.badge= @headsup_stats['tweets'][0]
				%span.badge.delta{:class => "#{@headsup_stats['tweets'][1] >= 0 ? 'badge-success' : 'badge-important'}"}= "#{@headsup_stats['tweets'][1] >= 0 ? '+' : ''} #{@headsup_stats['tweets'][1]}%"
			.span2.headsup
				%span.badge= @headsup_stats['questions_answered'][0]
				%span.badge.delta{:class => "#{@headsup_stats['questions_answered'][1] >= 0 ? 'badge-success' : 'badge-important'}"}= "#{@headsup_stats['questions_answered'][1] >= 0 ? '+' : ''} #{@headsup_stats['questions_answered'][1]}%"
			.span2.headsup
				%span.badge= @headsup_stats['average_daily_active_users'][0]
				%span.badge.delta{:class => "#{@headsup_stats['average_daily_active_users'][1] >= 0 ? 'badge-success' : 'badge-important'}"}= "#{@headsup_stats['average_daily_active_users'][1] >= 0 ? '+' : ''} #{@headsup_stats['average_daily_active_users'][1]}%"
			.span2.headsup
				%span.badge= @headsup_stats['rts'][0]
				%span.badge.delta{:class => "#{@headsup_stats['rts'][1] >= 0 ? 'badge-success' : 'badge-important'}"}= "#{@headsup_stats['rts'][1] >= 0 ? '+' : ''} #{@headsup_stats['rts'][1]}%"
			.span2.headsup
				%span.badge= @headsup_stats['weekly_churn'][0]
				%span.badge.delta{:class => "#{@headsup_stats['weekly_churn'][1] >= 0 ? 'badge-success' : 'badge-important'}"}= "#{@headsup_stats['weekly_churn'][1] >= 0 ? '+' : ''} #{@headsup_stats['weekly_churn'][1]}%"
	.row
		.span4.widget.small
			%h2 Questions Answered
			#questions-answered-graph
		.span8.widget.large
			%h2 Daily Retention: StudyEgg
			#daily-retention-studyegg-graph

		.span4.widget.small
			%h2 Daily Active Users
			#daily-active-users-graph
		.span8.widget.large
			%h2 Weekly Retention: StudyEgg
			#weekly-retention-studyegg-graph

		.span4.widget.small
			%h2 Retweets
			#retweets-graph
		/ .span8.widget.large
		/ 	%h2 Daily Retention: Twitter
		/ 	#daily-retention-twitter-graph
		/ .span8.widget.large
		/ 	%h2 Weekly Retention: Twitter
		/ 	#weekly-retention-twitter-graph
