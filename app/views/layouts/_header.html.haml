.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand{:href => "/"} Wisr
      .in.collapse
        %ul.nav{:style => 'float:right;'}     
          - if current_user
            %li
              %a.quick-stats
                %img{src: current_user.twi_profile_img_url, class: "rounded profile-img"}
                .quick-stat.answer-count{'title' => '426 questions answered', 'data-toggle' => 'popover', 'data-placement' => 'bottom'} 426
                .circle
                .quick-stat.moderation-count{'title' => '43 answers moderated', 'data-toggle' => 'popover', 'data-placement' => 'bottom'} 43
                .circle
                .quick-stat.question-count{'title' => '12 questions authored', 'data-toggle' => 'popover', 'data-placement' => 'bottom'} 12


            - if current_user.is_role? 'admin'
              %li
                .dropdown.nav-link
                  %a.nav-link{:href => "#", 'data-target' => "#"} Manage
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                      %a{:href => "/askers", :tabindex => "-1"} Status
                    %li
                      %a{:href => "/askers/edit_graph", :tabindex => "-1"} Asker Graph     
                    %li
                      %a{:href => "/moderations/manage?edits=true", :tabindex => "-1"} Questions

              %li
                .dropdown.nav-link
                  %a.nav-link{:href => "#", 'data-target' => "#"} Stats
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                      %a{:href => "/dashboard", :tabindex => "-1"} Dashboard
                    %li
                      %a{:href => "/experiments", :tabindex => "-1"} A/B Tests

            - elsif current_user.is_role? 'client'
              %li
                %a.nav-link{:href => "/clients/#{current_user.id}/report"} Reporting
            - elsif current_user.is_role? 'author'
              %li
                %a.nav-link{:href => "/questions"} My Questions

            - elsif current_user.is_role? "moderator"
              %li
                %a.nav-link{:href => "/moderations/manage"} Moderate
                
            - else
              %li.hidden-phone
                %a.nav-link{:href => "#"}= "Welcome #{current_user.twi_screen_name}!"

            %li= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "nav-link"
          - else
            %li= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter, :use_authorize => false), :class => (current_user ? "nav-link" : "auth_link nav-link")
