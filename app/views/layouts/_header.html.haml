.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand{:href => "/"} Wisr
      .in.collapse
        %ul.nav{:style => 'float:right;'}     
          - if current_user
            - if current_user.is_role? 'admin'
              %li
                .dropdown.nav-link
                  %a.nav-link{:href => "/askers", 'data-target' => "#"} Askers
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                      %a{:href => "/askers", :tabindex => "-1"} All Askers
                    %li.divider
                    - Asker.order("twi_screen_name ASC").all.each do |a|
                      %li
                        %a{:href => "/feeds/#{a.id}", :tabindex => "-1"}= a.twi_screen_name 

              %li
                .dropdown.nav-link
                  %a.nav-link{:href => "/clients", 'data-target' => "#"} Clients
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                    - RateSheet.order("created_at ASC").all.each do |r|
                      - client = r.clients[0]
                      - next if client.nil?
                      %li
                        %a{:href => "/clients/#{client.id}/report", :tabindex => "-1"}= r.title 

              %li
                .dropdown.nav-link
                  %a.nav-link{:href => "/dashboard", 'data-target' => "#"} Stats
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                      %a{:href => "/dashboard", :tabindex => "-1"} Dashboard
                    %li
                      %a{:href => "/split", :tabindex => "-1"} A/B Tests

            - elsif current_user.is_role? 'client'
              %li
                %a.nav-link{:href => "/clients/#{current_user.id}/report"} Reporting
            - elsif current_user.is_role? 'author'
              %li
                %a.nav-link{:href => "/questions"} My Questions
            - else
              %li.hidden-phone
                %a.nav-link{:href => "#"}= "Welcome #{current_user.twi_screen_name}!"

            %li= link_to "Sign Out", signout_path, :class => "nav-link"
            =# image_tag(current_user.twi_profile_img_url, :style => 'float:right;') 
          - else
            %li= link_to "Sign in with Twitter", "/auth/twitter", :class => "nav-link"
