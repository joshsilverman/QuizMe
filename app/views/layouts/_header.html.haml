.header
  .drawer-toggle
    = image_tag 'icons/mobile-nav.png'
  .sign-in
    - if current_user
      = hidden_field :current_user, :id
      = render partial: 'header/quick_stats'
    - else
      = link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter, :use_authorize => false), :class => (current_user ? "nav-link" : "auth_link nav-link")
